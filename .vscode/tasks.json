{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend Server",
            "type": "shell",
            // The command remains the same
            "command": "call app\\Scripts\\activate.bat && cd backend && uvicorn main:app --reload",
            "options": {
                "cwd": "${workspaceFolder}",
                // THIS FIXES THE ERROR: Forces VS Code to use cmd.exe
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d", "/c"
                    ]
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}